<div class="container">
	<br>
	<br>
	<div class="row justify-content-center">
		<div class="col-md-1">
			<img src="https://i.imgur.com/pPY04nK.png" width="80" alt="logo">
		</div>
		<div class="row center">
		<div class="col-md-6">
			<h1 class="header-text" >
				&nbspAppreciation&nbspDiary&nbsp
			</h1>
		</div>
	</div>
</div>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-10 content-box">
			<br>
			<br>
      <h1>Hello <%=@user.username %>!</h1>
      <br>
      <a href="/events"><button type="button" class="btn-material-second">Create A New event</button></a>
      <div class="col-6">
      <br>
      <% @events.each do |event|%>
      <!-- Pulls all events and checks if it matches the user id before iterating over them -->
			<p>______________________________<p>
      <h2><strong><%= event.name %></h2>
      <a href="/events/<%=event.id%>/edit"><i class="fa fa-pencil"></i> Edit Event</a><br>
      <a href="/events/<%=event.id%>/delete"><i class="fa fa-times"></i> Delete Event</a>
      <br>
      <br>
      <h4><a href="moments/new/<%=event.id%>"><i class="fa fa-plus"></i> Add another moment</a></h4>
      <br>
<!-- iterates through moments associated with the event and displays them -->
      <% event.moments.each do |moment| %>
      <h4></i> <%= moment.name %>
      <br>
      <a href="/moments/<%= moment.id %>/edit"><i class="fa fa-pencil"></i>Edit</a>
      <a href="/moments/<%= moment.id %>/delete"><i class="fa fa-times"></i>Delete</a>

      <br>
      <br>
      </h4>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
